<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoMain"
    android:background="@drawable/info_background">

    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/title_color"
        android:fontFamily="@font/text_font2"/>

    <TextView
        android:id="@+id/game_developer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Developer"
        app:layout_constraintTop_toBottomOf="@id/version_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shakhboboev_text"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/title_color"
        android:fontFamily="@font/text_font2"/>

    <TextView
        android:id="@+id/shakhboboev_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shakhboboev"
        app:layout_constraintTop_toBottomOf="@id/version_text"
        app:layout_constraintStart_toEndOf="@id/game_developer_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/title_color"
        android:fontFamily="@font/text_font2"
        android:drawableStart="@drawable/insta"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" -"
        app:layout_constraintTop_toBottomOf="@id/version_text"
        app:layout_constraintStart_toEndOf="@id/game_developer_text"
        app:layout_constraintEnd_toStartOf="@id/shakhboboev_text"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/title_color"
        android:fontFamily="@font/text_font2"/>

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="35dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Back to main menu"
        android:fontFamily="@font/text_font2"
        android:backgroundTint="@color/result_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>